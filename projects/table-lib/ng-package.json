{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/table-lib",
  "lib": {
    "entryFile": "src/public-api.ts",
    "cssUrl": "inline"
  },
  "assets": [
    "./src/lib/**/*.css",
    "./src/lib/**/*.scss",
    "./src/lib/i18n/**/*.json",
    {
      "glob": "**/*",
      "input": "./src/lib/i18n",
      "output": "/assets/i18n"
    }
  ]
}
